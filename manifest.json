{
  "manifest_version": 2,
  "name": "Kalt",
  "version": "1.0",

  "description": "Provides alt text for all images on the page.",

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Kalt"
  },
  "icons": {
    "48": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": ["nativeMessaging"
                 ,"downloads"
                 ,"activeTab"
                 ,"tabs"
                 ,"contextMenus"
                  , "menus"
                  , "notifications"
                  , "clipboardWrite"
                 ],

  "browser_specific_settings": {
    "gecko": {
      "id": "kalt@maxfieldchen.com",
      "strict_min_version": "50.0"
    }
  },
  "background":
    {
      "scripts": ["im2txt.js"]
    }

}
